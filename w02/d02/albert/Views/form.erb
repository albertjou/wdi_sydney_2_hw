<div id="form">
  <form action="/" method-"get">
    Movie Title: <input type="text" name="title" placeholder="Movie Title">
    <input class="btn" type="submit" value="Find"><br />
  </form>
</div>

<div class="poster">
  <% if @poster %>
  <img src="<%= "#{@poster}" %>" alt="Poster">

</div>
<div class="details">
  <ul>
    <li><span id="title">Year: </span><%= @year %></li>
    <li><span id="title">Rated: </span><%= @rated %></li>
    <li><span id="title">Released: </span><%= @released %></li>
    <li><span id="title">Genre: </span><%= @genre %></li>
    <li><span id="title">Actors: </span><%= @actors %></li>
    <li><span id="title">Plot: </span><%= @plot %></li>
    <li><span id="title">Rating: </span><%= @rating %></li>
  </ul>
  <div class="more">
    <ul>
      <li><span id="title">Runtime: </span><%= @runtime %></li>
      <li><span id="title">Director: </span><%= @director %></li>
      <li><span id="title">Writer: </span><%= @writer %></li>
    </ul>
    <script>
    $(document).click(function(){
      $(".more" ).toggle("slide");
    });
    </script>
  </div>
</div>
  <% end %>