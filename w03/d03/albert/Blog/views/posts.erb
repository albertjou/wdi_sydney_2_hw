<% if !@posts.is_a?Post %>
<% @posts.each do |post| %>
<section>
  <a class="section" href='/<%= post.id %>' alt="post"><h2 class="title"><%= post.title%></h2></a>
</section>
<% end %>

<% else %>
<div class="display">
  <div class="words">
    <h3 class="title"><%= @posts.title%></h2>
      <p class="content"><%= @posts.body %></p>
      <hr>
      <p class="created"><%= @posts.created_at %></p>
      <p class="updated"><%= @posts.updated_at %></p>
      <div class="clear"></div>
    </div><!-- words -->
    <a href="<%= @posts.id %>/comment">Comment</a>
    <!-- Original: included disqus. Updated: include in-house comment system -->
<% @posts.comments.each do |comment| %>
<div class="comments">
  <p class="content"><%= comment.comment %></p>
  <hr>
  <p class="commentor"><%= comment.commentor %></p>
  <p class="created"><%= comment.created_at %></p>
  <a href="/<%= @posts.id %>/<%= comment.id %>/edit">Edit</a>
</div><!-- comments -->
<% end %>


