<h2> Meme Videos </h2>

<form method="post" action="/videos/genre/search">
    <select>
      <% @videos.each do |video| %>
        <option> <%= video['genre'] %> </option>
      <% end %>
    </select>
    <input type="submit" value="Seach by Genre">
  </form>

<ul>
  <% @videos.each do |video| %>
   <li><a href="/videos/<%=video['id']%>"><%= video['name'] %> </a></li>
   <li><iframe width="420" height="315" src="<%= video['embed'] %>" frameborder="0"></iframe></li>
  <% end %>
</ul>